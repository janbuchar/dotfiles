{
  "$schema": "https://opencode.ai/config.json",
  "theme": "nord",
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "provider": {
    "apify-openrouter": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Apify OpenRouter",
      "options": {
        "baseURL": "https://openrouter.apify.actor/api/v1",
      },
      "models": {
        "openai/gpt-5.2": {
          "name": "GPT 5.2"
        },
        "google/gemini-2.5-flash": {
          "name": "Gemini 2.5 flash"
        }
      }
    }
  },
  "mcp": {
    "neovim": {
      "type": "local",
      "command": ["uv", "run", "/home/janbuchar/Projekty/nvim-mcp/.venv/bin/nvim-mcp"],
      "enabled": true,
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest", "--isolated"],
      "enabled": false,
    },
    "repomix": {
      "type": "local",
      "command": ["npx", "-y", "repomix", "--mcp"],
      "enabled": false,
    },
    "apify": {
      "type": "remote",
      "url": "https://mcp.apify.com/?tools=actors,docs,experimental,runs,storage",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer {env:APIFY_TOKEN}"
      }
    }
  },
  "agent": {
    "chat": {
      "mode": "primary",
      "model": "google/gemini-3-pro-preview",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
      }
    },
    "plan": {
      "model": "anthropic/claude-opus-4-6"
    },
    "build": {
      "model": "anthropic/claude-opus-4-6"
    }
  },
}
